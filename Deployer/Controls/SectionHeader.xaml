<UserControl x:Class="Deployer.SectionHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Deployer"
             mc:Ignorable="d" Height="25" Width="Auto"
             x:Name="SectionHeaderControl">
    <Grid Background="RoyalBlue">
        <Label
               Foreground="White" FontFamily="Segoe UI" FontWeight="Bold" 
               VerticalAlignment="Center" HorizontalAlignment="Center" Padding="0">
            <TextBlock x:Name="TextBlockHeader" Text="{Binding HeaderText}"/>
        </Label>
    </Grid>
</UserControl>
